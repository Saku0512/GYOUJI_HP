# 開発環境用環境変数

# SSL証明書用メールアドレス（開発環境では不要）
LETSENCRYPT_EMAIL=dev@example.com

# データベース設定（開発環境用）
DB_ROOT_PASSWORD=dev_root_password_not_secure
DB_USER=dev_user
DB_PASSWORD=dev_password_not_secure
DB_NAME=tournament_development

# JWT設定（開発環境用）
JWT_SECRET=dev-jwt-secret-key-not-for-production-use-only
JWT_EXPIRATION_HOURS=24
JWT_ISSUER=tournament-backend-development

# ビルド情報
BUILD_DATE=development
VCS_REF=development

# セキュリティ設定（開発環境では緩和）
ENABLE_HTTPS_REDIRECT=false
ENABLE_SECURITY_HEADERS=false
ENABLE_RATE_LIMITING=false

# 監視・ログ設定
LOG_LEVEL=debug
ENABLE_METRICS=false
METRICS_PORT=9091

# パフォーマンス設定
ENABLE_COMPRESSION=false
CACHE_MAX_AGE=0

# 開発環境固有設定
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_MODE=true
ENABLE_MOCK_DATA=true